@model PayPal.Api.CreditCard
@{
	ViewBag.Title = "Edit Stored Card";
}

@if (Model != null) {
	<form method="post" action="@Url.Action("Edit", new { id = Model.id })" class="form-horizontal">
		<fieldset>
			<legend>Card Details</legend>
			<div class="form-group">
				<label class="col-sm-3 control-label">Credit Card Number</label>
				<div class="col-sm-9">
					<p class="form-control-static">@Model.type @Model.number</p>
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-sm-3">Name</label>
				<div class="col-sm-9">
					<div class="row">
						<div class="col-sm-6">
							@Html.TextBoxFor(x => x.first_name, new { @class = "form-control", placeholder = "First Name" })
							@Html.ValidationMessageFor(x => x.first_name)
						</div>
						<div class="col-sm-6">
							@Html.TextBoxFor(x => x.last_name, new { @class = "form-control", placeholder = "Last Name" })
							@Html.ValidationMessageFor(x => x.last_name)
						</div>
					</div>
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-sm-3">Expire Date</label>
				<div class="col-sm-9">
					<div class="row">
						<div class="col-sm-6">
							@Html.DropDownListFor(x => x.expire_month, (IEnumerable<SelectListItem>)ViewBag.PossibleMonths, "-- Select Month --", new { @class = "form-control" })
							@Html.ValidationMessageFor(x => x.expire_month)
						</div>
						<div class="col-sm-6">
							@Html.DropDownListFor(x => x.expire_year, (IEnumerable<SelectListItem>)ViewBag.PossibleYears, "-- Select Year --", new { @class = "form-control" })
							@Html.ValidationMessageFor(x => x.last_name)
						</div>
					</div>
				</div>
			</div>
		</fieldset>
		<div class="form-group">
			<div class="col-sm-9 col-sm-offset-3">
				<button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-ok"></span> Save Changes</button>
				<a href="@Url.Action("Index")" class="btn btn-default">Cancel</a>
			</div>
		</div>
	</form>
} else {
	<div class="alert alert-info">Card not found.</div>
}